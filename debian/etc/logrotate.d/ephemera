/var/log/ephemera/*.log {
        hourly
        missingok
        rotate 12
        dateext
        dateformat -%Y-%m-%d-%H
        notifempty
        create 644 root root
        sharedscripts
        postrotate
                if [ -f /var/run/ephemera.pid ]; then
                        kill -USR1 `cat /var/run/ephemera.pid`
                fi
        endscript
}